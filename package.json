{
  "name": "trend-remix-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "dev": "react-router dev",
    "start": "react-router-serve ./build/server/index.js",
    "typecheck": "react-router typegen && tsc",
    "firebase:emulators": "firebase emulators:start --project demo-project",
    "firebase:emulators:ui": "firebase emulators:start --only firestore,auth --inspect-functions --project demo-project",
    "firebase:seed": "tsx scripts/seed-data.ts",
    "firebase:reset": "npm run firebase:seed",
    "firebase:check": "java -version && echo 'Java is available' || echo 'Java is not installed. Please install Java to use Firebase Emulators.'",
    "dev:firebase": "concurrently \"npm run firebase:emulators\" \"npm run dev\"",
    "db:up": "docker-compose up -d postgres",
    "db:down": "docker-compose down",
    "db:logs": "docker-compose logs postgres",
    "db:setup": "docker-compose up -d postgres && timeout /t 10 && psql -h localhost -U postgres -d office_convenience_store -f database/postgresql-setup.sql",
    "pgadmin": "docker-compose up -d pgadmin"
  },
  "dependencies": {
    "@react-router/node": "^7.9.2",
    "@react-router/serve": "^7.9.2",
    "@types/pg": "^8.15.6",
    "dotenv": "^17.2.3",
    "firebase": "^12.5.0",
    "isbot": "^5.1.31",
    "pg": "^8.16.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router": "^7.9.2"
  },
  "devDependencies": {
    "@react-router/dev": "^7.9.2",
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "^22",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "concurrently": "^9.2.1",
    "firebase-admin": "^13.6.0",
    "tailwindcss": "^4.1.13",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
